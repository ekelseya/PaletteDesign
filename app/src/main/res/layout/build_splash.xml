        <ImageView
                android:id="@+id/build_color_1"
                android:layout_width="0dp"
                android:layout_height="180dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintHorizontal_bias="0.0"
                android:contentDescription="@string/primary_color"
                android:background="@drawable/border"
                android:clickable="true" android:focusable="true"/>
        <TextView
                android:id="@+id/color_label_1"
                android:text="@string/click_to_load_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@+id/build_color_1"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="@+id/build_color_1"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="1.0"
                android:textSize="24sp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/build_color_1"
                app:layout_constraintVertical_bias="1.0"
                android:typeface="monospace"
                android:visibility="visible"/>
        <TextView
                android:id="@+id/color_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@+id/build_color_1"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="@+id/build_color_1"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="1.0"
                android:textSize="36sp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/text_hex1"
                app:layout_constraintVertical_bias="1.0"
                android:typeface="monospace"
                android:visibility="invisible"/>
        <TextView
                android:id="@+id/text_hex1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/build_color_1"
                app:layout_constraintEnd_toEndOf="@+id/color_name_1"
                app:layout_constraintStart_toStartOf="@+id/build_color_1"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintVertical_bias="1.0"
                app:layout_constraintTop_toTopOf="@+id/build_color_1"
                android:layout_marginBottom="8dp"
                android:visibility="invisible"/>

        <ImageView
                android:id="@+id/build_color_2"
