                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/build_color_2"
                app:layout_constraintEnd_toEndOf="@+id/color_name_2"
                app:layout_constraintStart_toStartOf="@+id/build_color_2"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="1.0"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintVertical_bias="1.0"
                app:layout_constraintTop_toTopOf="@+id/build_color_2"
                android:layout_marginBottom="8dp"
                android:visibility="invisible"/>
        <ImageView
